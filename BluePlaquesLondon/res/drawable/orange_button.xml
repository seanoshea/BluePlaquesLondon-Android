<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/blue_color" android:startColor="@color/blue_color" />

            <stroke android:width="@dimen/one" android:color="@color/grey_color" />
        </shape></item>
    <item android:state_enabled="true"><shape>
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <stroke android:width="@dimen/one" android:color="@color/grey_color" />
        </shape></item>

</selector>